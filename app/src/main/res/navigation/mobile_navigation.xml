<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sourpower.ui.home.DailySpecFragment"
        android:label="@string/title_dailyspec"
        tools:layout="@layout/fragment_dailyspec" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.sourpower.ui.dashboard.FavouritesFragment"
        android:label="@string/title_fav"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.sourpower.ui.notifications.AllFragment"
        android:label="@string/title_all"
        tools:layout="@layout/fragment_all" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.sourpower.ui.notifications.AllFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_all" />
</navigation>
